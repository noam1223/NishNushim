<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp">





        <View
            android:id="@+id/view_profile_background_cart_delivery_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@drawable/profile_cart_background"
            app:layout_constraintBottom_toBottomOf="parent" />


        <ImageView
            android:id="@+id/profile_image_view_cart_delivery_details_fragment"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/background_drawer_image_view"
            android:scaleType="centerInside"
            android:src="@drawable/ic_icon_user"
            app:layout_constraintBottom_toTopOf="@+id/view_profile_background_cart_delivery_details_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_profile_background_cart_delivery_details_fragment" />



        <LinearLayout
            android:id="@+id/user_name_area_cart_delivery_details_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image_view_cart_delivery_details_fragment">


            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_icon_user" />


            <TextView
                android:id="@+id/user_name_text_view_cart_delivery_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:fontFamily="@font/assistant_regular"
                android:text="שם פרטי"
                android:textColor="@color/custom_blue" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/user_email_linear_layout_area_cart_delivery_details_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_area_cart_delivery_details_fragment">


            <ImageView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_icon_letter"
                app:tint="@color/custom_blue" />


            <TextView
                android:id="@+id/user_email_cart_delivery_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:fontFamily="@font/assistant_regular"
                android:text="email"
                android:textColor="@color/custom_blue" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_email_linear_layout_area_cart_delivery_details_fragment">


            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_icon_telephone"
                app:tint="@color/custom_blue" />


            <TextView
                android:id="@+id/user_phone_number_cart_delivery_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:fontFamily="@font/assistant_regular"
                android:text="050-3542523"
                android:textColor="@color/custom_blue" />


        </LinearLayout>


        <ImageButton
            android:id="@+id/edit_profile_detail_img_btn_cart_delivery_details_fragment"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:layout_constraintTop_toTopOf="@+id/view_profile_background_cart_delivery_details_fragment"
            app:layout_constraintLeft_toLeftOf="@+id/view_profile_background_cart_delivery_details_fragment"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="34dp"
            android:src="@drawable/ic_icon_edit"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="26dp"
        android:background="#e0e0e0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="38dp"
        android:fontFamily="@font/assistant_bold"
        android:text="כתובת למשלוח"
        android:textColor="@color/custom_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/yellow_cart_background"
        android:layoutDirection="rtl"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/list_of_address_radio_group_cart_delivery_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/address_list_head_line_text_view_address_list_pop_up_window"
            android:layout_marginBottom="8dp">


            <RadioButton
                android:id="@+id/my_location_address_to_deliver_radio_btn_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/radio_button_inset"
                android:checked="true"
                android:drawableRight="@drawable/ic_icon_my_location"
                android:drawablePadding="24dp"
                android:fontFamily="@font/assistant_regular"
                android:layoutDirection="rtl"
                android:paddingRight="18dp"
                android:text="מיקום נוכחי"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />


        </RadioGroup>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="26dp"
        android:background="#e0e0e0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="38dp"
        android:fontFamily="@font/assistant_bold"
        android:text="הערות לשליח"
        android:textColor="@color/custom_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"

        android:layout_marginRight="8dp"
        android:background="@drawable/yellow_cart_background"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:visibility="visible">


        <RadioGroup
            android:id="@+id/note_to_deliver_radio_group_cart_delivery_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/address_list_head_line_text_view_address_list_pop_up_window">


            <RadioButton
                android:id="@+id/note_one_for_delivery_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/radio_button_inset"
                android:checked="true"
                android:drawablePadding="24dp"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="נא להשאיר משלוח מחוץ לדלת"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />


            <RadioButton
                android:id="@+id/note_two_for_delivery_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/radio_button_inset"
                android:drawablePadding="24dp"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="נא לא לצלצל באינטרקום"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />


            <RadioButton
                android:id="@+id/note_three_for_delivery_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/radio_button_inset"
                android:drawablePadding="24dp"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="נא לחייג אליי"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />


            <RadioButton
                android:id="@+id/note_four_for_delivery_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/radio_button_inset"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="נא לסמס לי כשאתה פה"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />


            <RadioButton
                android:id="@+id/note_five_for_delivery_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/radio_button_inset"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="נא לא לצלצל בדלת"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />

            <!--               NEED TO ADD THE OPTION ADD NOTE BY HARD CODED-->
            <RadioButton
                android:id="@+id/note_six_for_delivery_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/radio_button_background_top_screen_customize"
                android:button="@drawable/ic_icon_add_button"
                android:fontFamily="@font/assistant_regular"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:paddingRight="26dp"
                android:text="הוסף הערה"
                android:textColor="@color/custom_blue"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/add_note_to_deliver_edit_text_cart_delivery_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/assistant_regular"
                android:hint="הערה"
                android:paddingBottom="16dp"
                android:textColor="#b3002144"
                android:textColorHint="#b3002144"
                android:textSize="13sp"
                android:visibility="gone" />


        </RadioGroup>


        <Button
            android:id="@+id/save_notes_btn_address_list_pop_up_window"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_sign_in_clicked_background"
            android:fontFamily="@font/assistant_bold"
            android:text="שמירה"
            android:textColor="@drawable/btn_sign_in_clicked_text_view_opposite"
            android:textSize="16sp"
            android:visibility="gone"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="26dp"
        android:background="#e0e0e0" />


    <LinearLayout
        android:id="@+id/linear_layout_way_of_delivery_cart_delivery_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_marginTop="18dp">


   <include layout="@layout/way_of_delivery_layout"
       android:id="@+id/way_of_delivery_view_include_cart_delivery_details_fragment"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/split_credit_card_btn_cart_delivery_details_fragment"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_drawer_image_view"
        android:fontFamily="@font/assistant_regular"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="פיצול אמצעי תשלום"
        android:textColor="@color/custom_blue"
        android:textSize="13sp"
        />


    <Button
        android:id="@+id/add_credit_card_btn_cart_delivery_details_fragment"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_drawer_image_view_fullfill"
        android:fontFamily="@font/assistant_bold"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="הוספת אמצעי תשלום"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <Button
        android:id="@+id/send_to_restaurant_order_btn_cart_delivery_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/red_cart_background"
        android:fontFamily="@font/assistant_bold"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="שליחה למסעדה"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>