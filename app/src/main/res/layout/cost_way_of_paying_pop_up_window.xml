<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="186dp"
    android:layout_height="125dp"
    android:background="@drawable/background_delete_pop_up"
    android:layout_gravity="center">


    <ImageButton
        android:id="@+id/close_window_image_btn_cost_way_of_paying_pop_up_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"/>


    <EditText
        android:id="@+id/cost_edit_text_cost_way_of_paying_pop_up_window"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:hint=" סכום"
        android:textSize="13sp"
        android:paddingBottom="12dp"
        android:inputType="number"
        android:fontFamily="@font/assistant_regular"
        android:textColorHint="@color/custom_blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/edit_text_view_cost_way_of_paying_pop_up_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant_light"
            android:text="עדכן"
            android:textColor="@color/custom_blue"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/cancel_text_view_cost_way_of_paying_pop_up_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="42dp"
            android:fontFamily="@font/assistant_regular"
            android:text="ביטול"
            android:textColor="@color/custom_red"
            android:textSize="13sp" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>