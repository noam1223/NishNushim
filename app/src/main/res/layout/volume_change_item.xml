<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layoutDirection="rtl">


    <TextView
        android:id="@+id/volume_name_text_view_volume_change_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/assistant_bold"
        android:text="סכו״ם"
        android:textColor="@color/custom_blue" />


        <TextView
            android:id="@+id/cost_of_sauce_text_view_volume_change_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/linear_layout_volume_btns_area_volume_change_item"
            android:fontFamily="@font/assistant_regular"
            android:text="ללא עלות"
            android:textColor="@color/custom_red"
            android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/linear_layout_volume_btns_area_volume_change_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/increment_supplies_img_btn_volume_change_item"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:background="@drawable/ic_icon_add_button" />

        <TextView
            android:id="@+id/number_of_supplies_text_view_volume_change_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="0"
            android:textColor="@color/custom_red"
            android:textSize="12sp" />


        <ImageButton
            android:id="@+id/decrement_supplies_img_btn_volume_change_item"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:background="@drawable/ic_icon_minus_button" />


    </LinearLayout>

    </RelativeLayout>

</LinearLayout>