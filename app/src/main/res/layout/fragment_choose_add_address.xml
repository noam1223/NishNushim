<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.signinfragment.ChooseAddAddressFragment"
    android:background="@drawable/sign_in_fragment_background_rounded"
    android:orientation="vertical"
    android:layoutDirection="rtl">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="איפה נפגש?"
        android:layout_marginTop="81dp"
        android:textSize="16sp"
        android:textColor="@color/custom_blue"
        android:fontFamily="@font/assistant_regular"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מיקומכם נחוץ, שיהיה לנו קל למצוא אתכם"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:textSize="12sp"
        android:textColor="@color/custom_blue"
        android:fontFamily="@font/assistant_regular"/>


    <Button
        android:id="@+id/find_my_address_by_gps_btn_address_manually_fragment"
        android:layout_width="168dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:textColor="@drawable/btn_sign_in_clicked_text_view"
        android:background="@drawable/btn_sign_in_clicked_background"
        android:textStyle="bold"
        android:fontFamily="@font/assistant_regular"
        android:text="מיקום נוכחי"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שיתוף המיקום שלך יעזור לנו למצוא מסעדות שקרובות אליך"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="@color/custom_blue"
        android:fontFamily="@font/assistant_regular"/>





    <Button
        android:id="@+id/manually_address_btn_address_manually_fragment"
        android:layout_width="168dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="@drawable/btn_sign_in_clicked_text_view"
        android:background="@drawable/btn_sign_in_clicked_background"
        android:textStyle="bold"
        android:fontFamily="@font/assistant_regular"
        android:text="כתובת אחרת"/>

</LinearLayout>