<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserAddressListActivity"
    android:layoutDirection="rtl">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_restaurant_profile_home_activity"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="exitUntilCollapsed">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layoutDirection="rtl"
            android:visibility="visible">


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/custom_blue"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_scrollFlags="exitUntilCollapsed" />


           <ImageButton
               android:id="@+id/back_img_btn_address_list_activity"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/ic_icon_arrow"
               android:layout_marginRight="18dp"
               android:layout_centerVertical="true"
               android:rotation="270"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הכתובות שלי"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/back_img_btn_address_list_activity"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:textSize="14sp"
                android:fontFamily="@font/assistant_regular"/>




        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>






    <ListView
        android:id="@+id/user_address_list_view_address_list_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_yellow_top_rounded"
        android:paddingTop="48dp"/>





</LinearLayout>