<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/profile_user_img_view_recommendation_item"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="36dp"
            android:background="@drawable/background_drawer_image_view"
            android:scaleType="center"
            android:src="@drawable/ic_icon_user" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">


            <TextView
                android:id="@+id/user_name_text_view_recommendation_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_regular"
                android:text="שם"
                android:textColor="@color/custom_blue"
                android:textSize="12dp" />


            <RatingBar
                android:id="@+id/recommendation_rating_bar_recommendation_item"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layoutDirection="rtl"
                android:max="5"
                android:maxHeight="16dp"
                android:secondaryProgressTint="#00000000"
                android:stepSize="1" />


            <TextView
                android:id="@+id/date_text_view_recommendation_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/assistant_regular"
                android:text="תאריך"
                android:textColor="@color/custom_blue"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/recommendation_detail_text_view_recommendation_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פירוט"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/assistant_regular"
        android:textColor="#b3002144"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>