<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".nishnushFragments.fragments_restaurant_profile.MenuRestaurantFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sub_titles_recycler_view_menu_restaurant_fragment"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lizvor_credit_constrain_layout_menu_restaurant_fragment"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:layoutDirection="rtl"
        android:background="@color/custom_blue"
        app:layout_constraintTop_toBottomOf="@+id/sub_titles_recycler_view_menu_restaurant_fragment">


        <ImageView
            android:id="@+id/virtual_coin_image_view_menu_restaurant_fragment"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:background="@drawable/virtual_coin_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="72dp"/>


        <TextView
            android:id="@+id/zivru_la_kredit_aba_text_view_menu_restaurant_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/assistant_bold"
            android:text="צברו 25% לקרדיט להזמנה הבאה"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintRight_toLeftOf="@+id/virtual_coin_image_view_menu_restaurant_fragment"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="26dp"
            android:fontFamily="@font/assistant_light"
            android:text="דמי המשלוח אינם כלולים"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/virtual_coin_image_view_menu_restaurant_fragment"
            app:layout_constraintTop_toBottomOf="@+id/zivru_la_kredit_aba_text_view_menu_restaurant_fragment" />



    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu_recycler_view_restaurant_menu_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@+id/lizvor_credit_constrain_layout_menu_restaurant_fragment"
        android:layout_marginTop="18dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>