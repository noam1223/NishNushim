<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".nishnushFragments.fragments_restaurant_profile.RestaurantProfileDetailsFragment">




            <LinearLayout
                android:id="@+id/linear_layout_high_light_area_restaurant_profile_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/deliveries_high_light_text_view_restaurant_profile_details_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/sub_title_menu_background_clicked"
                    android:fontFamily="@font/assistant_regular"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingTop="2dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="2dp"
                    android:text="משלוחים"
                    android:textColor="@color/custom_blue"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/hours_high_light_text_view_restaurant_profile_details_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/assistant_regular"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingTop="2dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="2dp"
                    android:text="שעות"
                    android:textColor="@color/custom_blue"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/recommendation_high_light_text_view_restaurant_profile_details_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/assistant_regular"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingTop="2dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="2dp"
                    android:text="המלצות"
                    android:textColor="@color/custom_blue"
                    android:textSize="12sp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="18dp"
                android:background="#e0e0e0" />


            <LinearLayout
                android:id="@+id/linear_layout_profile_details_area_profile_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:tag="1"
                android:layout_marginTop="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/restaurant_name_text_view_restaurant_profile_details_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="32dp"
                        android:fontFamily="@font/arimo_bold"
                        android:gravity="center"
                        android:text="שם המסעדה"
                        android:textColor="@color/custom_blue"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/arimo_bold"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="@color/custom_yellow"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/full_address_text_view_restaurant_profile_details_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/arimo_regular"
                        android:gravity="center"
                        android:text="כתובת"
                        android:textColor="@color/custom_blue"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="32dp"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/call_restaurant_linear_layout_area_restaurant_profile_details_fragment"
                        android:layout_width="68dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:gravity="center"
                        android:background="@drawable/yellow_rounded_custom_btn">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/assistant_regular"
                        android:text="חייג"
                        android:textColor="#cc002144"
                        android:textSize="12sp" />


                    <ImageButton
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/ic_call_icon"
                        android:layout_gravity="center"/>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/wase_restaurant_img_btn_restaurant_profile_detauls_fragment"
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/ic_waze_icon" />


                </LinearLayout>


                <com.example.nishnushim.helpUIClass.NonScrollListView
                    android:id="@+id/area_for_delivery_list_view_restaurant_profile_details_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="8dp"
                    android:dividerHeight="0dp"
                    android:divider="@null"/>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="18dp"
                android:background="#e0e0e0" />


            <LinearLayout
                android:id="@+id/linear_layout_open_close_hours_profile_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:background="@drawable/more_details_areas_background"
                android:tag="2"
                android:layout_marginTop="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/assistant_bold"
                    android:text="לו״ז משלוחים"
                    android:textColor="@color/custom_blue"
                    android:textSize="12sp" />


                <com.example.nishnushim.helpUIClass.NonScrollListView
                    android:id="@+id/open_close_hours_list_view_restaurant_profile_details_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="0px"
                    android:divider="@null"/>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="18dp"
                android:background="#e0e0e0" />


            <LinearLayout
                android:id="@+id/linear_layout_recommendation_area_profile_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="18dp"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:background="@drawable/more_details_areas_background"
                android:tag="3"
                android:layout_marginTop="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/assistant_bold"
                    android:text="המלצות"
                    android:textColor="@color/custom_blue"
                    android:textSize="12sp" />


                <LinearLayout
                    android:id="@+id/linear_layout_non_recommendation_area_restaurant_profile_details_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="18dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="38dp"
                        android:fontFamily="@font/assistant_regular"
                        android:text="טרם המליצו עלינו. נשמח שתהיה הראשון."
                        android:textColor="#b3002144"
                        android:textSize="12sp" />


                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="142dp"
                        android:src="@drawable/ic_chicken_recommendation" />


                </LinearLayout>


                <com.example.nishnushim.helpUIClass.NonScrollListView
                    android:id="@+id/recommendation_list_view_restaurant_profile_details_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="0px"
                    android:divider="@null"/>


            </LinearLayout>


        </LinearLayout>