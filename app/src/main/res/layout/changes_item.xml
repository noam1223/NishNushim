<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_marginTop="8dp">



    <TextView
        android:id="@+id/changes_title_text_view_changes_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="כותרת שינוי"
        android:textSize="15sp"
        android:textColor="@color/custom_blue"
        android:fontFamily="@font/assistant_bold"
        android:layout_marginRight="18dp"/>




    <com.example.nishnushim.helpUIClass.NonScrollListView
        android:id="@+id/changes_item_list_view_changes_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_cart_background"
        android:visibility="visible"/>



</LinearLayout>