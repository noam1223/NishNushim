<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl">



    <TextView
        android:id="@+id/title_way_of_delivery_text_view_cart_delivery_details_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="38dp"
        android:fontFamily="@font/assistant_bold"
        android:text="בחירת אמצעי תשלום"
        android:textColor="@color/custom_blue" />


    <RadioGroup
        android:id="@+id/way_of_paying_radio_group_cart_delivery_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/yellow_cart_background"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/credit_cart_radio_btn_cart_delivery_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/radio_button_background_top_screen_customize"
            android:button="@drawable/radio_button_inset"
            android:checked="true"
            android:drawablePadding="24dp"
            android:fontFamily="@font/assistant_regular"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:tag="2"
            android:text="כרטיס אשראי"
            android:textColor="@color/custom_blue"
            android:textSize="13sp" />


        <RadioButton
            android:id="@+id/cash_radio_btn_cart_delivery_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radio_button_background_top_screen_customize"
            android:button="@drawable/radio_button_inset"
            android:drawablePadding="24dp"
            android:fontFamily="@font/assistant_regular"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:text="מזומן"
            android:tag="1"
            android:textColor="@color/custom_blue"
            android:textSize="13sp" />


    </RadioGroup>



</LinearLayout>