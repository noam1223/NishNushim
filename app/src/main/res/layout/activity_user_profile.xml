<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/head_line_text_view_profile_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="פרטים אישיים"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textColor="#000000"/>



    <TextView
        android:id="@+id/name_text_view_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם: "
        android:layout_below="@id/head_line_text_view_profile_activity"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"/>


    <TextView
        android:id="@+id/phone_number_text_view_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מספר טלפוון: "
        android:layout_below="@id/name_text_view_profile_activity"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:text="פרטים בהמשך"
        android:gravity="center"/>


    <Button
        android:id="@+id/log_out_btn_profile_activity"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/red_rounded_custom_btn"
        android:layout_marginBottom="32dp"
        android:text="התנתק"
        android:fontFamily="@font/assistant_bold"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

</RelativeLayout>